%h1
  Registered Troops
%h3
  = link_to 'Register a new troop', new_resource_path
%table#data.sortable.resizable
  %tr
    %th
      Number
    %th
      Scoutmaster
    %th
      Session
    %th
      Email
  - for troop in @troops
    - next if troop.hidden
    %tr
      %td
        = h troop.number
      %td
        = h troop.troopmaster
      %td
        = h troop.session_text
      %td
        = h troop.troopmaster_email
      %td
        = link_to 'Show Report', resource_path(troop)
      %td
        = link_to 'Edit Troop', edit_resource_path(troop)
      %td
        = link_to 'Campers', resource_campers_path(troop)
      %td
        = link_to 'Delete', resource_path(troop), :confirm => 'Are you sure? This will delete the troop and ALL the associated campers.', :method => :delete
%script{ :language => "javascript" }
  TableKit.Sortable.init("data");
%br
