<h1>Campers for Troop <%= h @troop.number %></h1>

<table id="data" class="sortable resizable">
  <tr>
    <th>Name</th>
    <th>Rank</th>
    <th>Age</th>
    <th>Nicoteh</th>
  </tr>

<% for camper in @campers %>
  <tr>
    <td><%=h camper.name %></td>
    <td><%=h camper.rank %></td>
    <td><%=h camper.age %></td>
    <td><%=h camper.nicoteh %></td>
    <td><%= link_to 'Show', resource_path(camper) %></td>
    <td><%= link_to 'Edit', edit_resource_path(camper) %></td>
    <td><%= link_to 'Delete', resource_path(camper), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<script language="javascript"> TableKit.Sortable.init("data"); </script>

<br />

